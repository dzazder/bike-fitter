@page
@model BikeFitter.Pages.Bikes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bike.Manufacturer" class="control-label"></label>
                <select asp-for="Bike.Manufacturer.Id" asp-items="Model.GetManufacturers()"></select>
                <span asp-validation-for="Bike.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.ModelName" class="control-label"></label>
                <input asp-for="Bike.ModelName" class="form-control" />
                <span asp-validation-for="Bike.ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Price" class="control-label"></label>
                <input asp-for="Bike.Price" class="form-control" />
                <span asp-validation-for="Bike.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Weight" class="control-label"></label>
                <input asp-for="Bike.Weight" class="form-control" />
                <span asp-validation-for="Bike.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Uri" class="control-label"></label>
                <input asp-for="Bike.Uri" class="form-control" />
                <span asp-validation-for="Bike.Uri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bike.Cassette" class="control-label"></label>
                <select asp-for="Bike.Cassette.Id" asp-items="Model.GetCassettes()"></select>
                <span asp-validation-for="Bike.Cassette" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

